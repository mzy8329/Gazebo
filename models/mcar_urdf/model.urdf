<robot name="mcar_urdf">
    <!-- chassis -->
    <link name="chassis">
        <inertial>
            <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
            <mass value="0.2"/>
            <inertia ixx="0.0001079" ixy="0.0" ixz="0.0" iyy="0.0002822" iyz="0.0" izz="0.0002407"/>
        </inertial>

        <visual name="visual">
            <origin xyz = "0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.5 0.3 0.2"/>
            </geometry>
        </visual>

        <collision name="collision">
            <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.5 0.3 0.2"/>    
            </geometry>
        </collision>

        <visual name="visual_caster">
            <origin xyz="-0.2 0.0 0.05"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </visual>

        <collision name="collision_caster">
            <origin xyz="-0.2 0.0 0.05"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry> 
            
        </collision>
        
    </link>

    <gazebo reference="chassis">
        <mu1>1e-6</mu1>
        <mu2>1e-6</mu2>
        <kp>500000.0</kp>
        <kd>10.0</kd>
        <minDepth>0.001</minDepth>
        <maxVel>0.1</maxVel>
        <fdir1>1 0 0</fdir1>
        <material>Gazebo/Grey</material>
    </gazebo>

    <!-- right wheel -->
    <link name="right_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0"/>
            <mass value="0.01"/>
            <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
        </inertial>   

        <visual name="visual">
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </visual>

        <collision name="collision">
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference="right_wheel">
        <mu1>0.3</mu1>
        <mu2>0.3</mu2>
        <kp>500000.0</kp>
        <kd>10.0</kd>
        <minDepth>0.001</minDepth>
        <maxVel>0.1</maxVel>
        <fdir1>1 0 0</fdir1>
        <material>Gazebo/FlatBlack</material>
    </gazebo>

    <joint name="right_joint" type="continuous">
        <origin xyz="0.15 -0.21 0.15" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <transmission name="right_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="right_joint">
            <hardwareInterface>EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="right_motor">
            <hardwareInterface>EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <!-- left wheel -->
    <link name="left_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0"/>
            <mass value="0.01"/>
            <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
        </inertial>   

        <visual name="visual">
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </visual>

        <collision name="collision">
            <origin xyz="0 0 0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference="left_wheel">
        <mu1>0.3</mu1>
        <mu2>0.3</mu2>
        <kp>500000.0</kp>
        <kd>10.0</kd>
        <minDepth>0.001</minDepth>
        <maxVel>0.1</maxVel>
        <fdir1>1 0 0</fdir1>
        <material>Gazebo/FlatBlack</material>
    </gazebo>

    <joint name="left_joint" type="continuous">
        <origin xyz="0.15 0.21 0.15" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <transmission name="left_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="left_joint">
            <hardwareInterface>EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="left_motor">
            <hardwareInterface>EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <!-- sensor -->
    <!-- 1. laser -->
    <link name="laser">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1e-3"/>
            <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
        </inertial>
        <visual name="visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
               <cylinder radius="0.08" length="0.1"/>
            </geometry>
            <material name="red">
                <color rgba="0.0 1.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.08" length="0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="laser2bass" type="fixed">
        <origin xyz="0.15 0.0 0.35" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="laser"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <gazebo reference="laser">
        <sensor type="ray" name="laser_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update>30</update>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-2</min_angle>
                        <max_angle>2</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.2</min>
                    <max>3.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>

            <plugin name="gazebo_ros_laser_controller" filename="libgazebo_ros_laser.so">
                <topicName>/mcar_urdf/laser/scan</topicName>
                <frameName>laser</frameName>
            </plugin>
        </sensor>
    </gazebo>

    <!-- 2. imu -->
    
        <!-- ros control plugin  ros_control不能和其他控制器一起使用 下面这段代码为费代码-->
        <!-- <gazebo>
            <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
                <robotNamespace>/car_urdf</robotNamespace>
            </plugin>
        </gazebo> -->

    <!-- diff controller plugin -->
    <gazebo>
        <plugin name="caster_controller" filename="libgazebo_ros_diff_drive.so">
          <alwaysOn>true</alwaysOn>
          <commandTopic>mcar_urdf/cmd_vel</commandTopic>
          <odometryTopic>mcar_urdf/odom</odometryTopic>
          <odometryFrame>odom</odometryFrame>
          <odometrySource>world</odometrySource>
          <publishOdomTF>true</publishOdomTF>
          <robotBaseFrame>base_footprint</robotBaseFrame>
          <publishWheelTF>false</publishWheelTF>
          <publishTf>true</publishTf>
          <publishWheelJointState>true</publishWheelJointState>
          <legacyMode>false</legacyMode>
          <updateRate>50</updateRate>
          <leftJoint>left_joint</leftJoint>
          <rightJoint>right_joint</rightJoint>
          <wheelSeparation>0.4</wheelSeparation>
          <wheelDiameter>0.3</wheelDiameter>
          <wheelAcceleration>1</wheelAcceleration> 
          <wheelTorque>6.5</wheelTorque>
          <rosDebugLevel>na</rosDebugLevel>
        </plugin>
      </gazebo>

</robot>
